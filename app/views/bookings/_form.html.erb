<%= form_with :url => "/properties/#{params[:property_id]}/bookings",:html =>
{:class =>'bg-white w-[300px] md:w-[500px] lg:w-[700px] min-h-[400px] p-5
rounded-xl flex flex-col justify-center gap-4'}, :method => :post do |form| %>
<% if booking.errors.any? %>
<div style="color: red">
  <h2>
    <%= pluralize(booking.errors.count, "error") %> prohibited this booking from
    being saved:
  </h2>

  <ul>
    <% booking.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
